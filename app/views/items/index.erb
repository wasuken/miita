<h2><%= @title %></h2>
<ul>
  <% @items.each do |item|%>
  <section class="card">
	<div class="card-content">
	  <h1 class="card-title"><%= item.title[0,30] %></h1>
	  <p class="card-text"><%= item.plain_body.gsub(/<.*?>/, "")[0,30] %></p>
	</div>
	<div class="card-link">
	  <a href="/items/show/<%= item.id%>">read</a>
	</div>
  </section>
  <% end %>
</ul>
<%= stylesheet_link_tag "items/index", media: "all" %>
